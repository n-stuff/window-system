{
    "metadata": [
        {
            "src": [
                {
                    "files": [ "**/*.sln", "**/*.csproj" ],
                    "exclude": [ "**/bin/**", "**/obj/**" ],
                    "src": "../src"
                }
            ],
            "dest": "obj/api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [ "**/*.yml" ],
                "src": "obj/api",
                "dest": "api"
            },
            {
                "files": [ "articles/**/*.md", "*.md", "toc.yml" ]
            }
        ],
        "resource": [
            {
                "files": [ "articles/images/**"]
            }
        ],
        "overwrite": "specs/*.md",
        "globalMetadata": {
            "_appTitle": "n-stuff/window-system website",
            "_enableSearch": true
        },
        "markdownEngineName": "markdig",
        "dest": "_site",
        "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  }
}
